@model IEnumerable<KutuphaneYonetim.Models.Kitap>

@{
    ViewData["Title"] = "Kitaplar";
}

<h1>Kütüphane Arşivi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kitap Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Resim</th>
            <th>@Html.DisplayNameFor(model => model.Ad)</th>
            <th>@Html.DisplayNameFor(model => model.Yazar)</th>
            <th>@Html.DisplayNameFor(model => model.Tur)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.ResimYolu != null)
                    {
                        <img src="~/images/@item.ResimYolu" width="60" />
                    }
                    else
                    {
                        <span>Yok</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.Yazar)</td>
                <td>@Html.DisplayFor(modelItem => item.Tur)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>