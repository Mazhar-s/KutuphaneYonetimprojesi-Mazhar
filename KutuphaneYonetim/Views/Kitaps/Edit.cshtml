@model KutuphaneYonetim.Models.Kitap

@{
    ViewData["Title"] = "Düzenle";
}

<h1>Kitap Düzenle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ResimYolu" />

            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Yazar" class="control-label"></label>
                <input asp-for="Yazar" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="SayfaSayisi" class="control-label"></label>
                <input asp-for="SayfaSayisi" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tur" class="control-label"></label>
                <input asp-for="Tur" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="BasimYili" class="control-label"></label>
                <input asp-for="BasimYili" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label>Mevcut Resim:</label><br />
                @if (Model.ResimYolu != null)
                {
                    <img src="~/images/@Model.ResimYolu" width="100" />
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="ResimDosyasi" class="control-label">Yeni Resim Seç</label>
                <input asp-for="ResimDosyasi" accept="image/*" type="file" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>