@model KutuphaneYonetim.Models.Kitap

@{
    ViewData["Title"] = "Kitap Detayları";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white p-3 text-center">
                    <h4 class="mb-0">Kitap Bilgileri</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.ResimYolu))
                            {
                                <img src="/uploads/@Model.ResimYolu" class="img-fluid rounded shadow" alt="Kapak Resmi" style="max-height: 300px;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 250px; border: 2px dashed #dee2e6;">
                                    <span class="text-muted small">Kapak Görseli Yok</span>
                                </div>
                            }
                        </div>

                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th class="text-muted" style="width: 40%">Kitap Adı</th>
                                        <td class="fw-bold fs-5">@Model.Ad</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Yazar</th>
                                        <td>@Model.Yazar</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Tür</th>
                                        <td><span class="badge bg-secondary">@Model.Tur</span></td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Sayfa Sayısı</th>
                                        <td>@Model.SayfaSayisi</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Basım Yılı</th>
                                        <td>@Model.BasimYili</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Sisteme Kayıt</th>
                                        <td class="small text-muted">@Model.EklenmeTarihi.ToShortDateString()</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light p-3 text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 me-2">Düzenle</a>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Listeye Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>